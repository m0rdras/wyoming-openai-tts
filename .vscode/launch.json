{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug __main__",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/wyoming_openai_tts/__main__.py",
            "console": "integratedTerminal",
            "env": {
                "PYTHONPATH": "${workspaceFolder}",
            },
            "args": [
                "--voice", "alloy",
                "--download-dir", "./temp/",
                "--api-key", "<your-api-key>",
                "--debug",
                "--uri", "tcp://0.0.0.0:10200"
            ]
        }
    ]
}
